<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5888A6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responde a las siguientes preguntas"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />


        <!-- Pregunta 1 -->
        <TextView
            android:id="@+id/label_pregunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ¿Cómo te sentiste al inicio del ejercicio?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 2 -->
        <TextView
            android:id="@+id/label_pregunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. ¿Qué parte del cuerpo sentiste más aliviada?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 3 -->
        <TextView
            android:id="@+id/label_pregunta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. ¿El ritmo del ejercicio fue adecuado para ti?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 4 -->
        <TextView
            android:id="@+id/label_pregunta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. ¿Te resultó fácil seguir los movimientos del instructor?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 5 -->
        <TextView
            android:id="@+id/label_pregunta5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. ¿Hubo algún momento del ejercicio que te resultó difícil?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 6 -->
        <TextView
            android:id="@+id/label_pregunta6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. ¿Notaste alguna mejora en tu estado de ánimo?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 7 -->
        <TextView
            android:id="@+id/label_pregunta7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. ¿Te gustaría repetir esta rutina en otro momento?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 8 -->
        <TextView
            android:id="@+id/label_pregunta8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. ¿Qué calificación le darías a este ejercicio?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 9 -->
        <TextView
            android:id="@+id/label_pregunta9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9. ¿Te gustaría incluir otros tipos de ejercicios?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Pregunta 10 -->
        <TextView
            android:id="@+id/label_pregunta10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10. ¿Deseas compartir alguna otra observación sobre tu experiencia?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/pregunta10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:hint="Escribe tu respuesta"
            android:padding="8dp" />

        <!-- Botón Enviar -->
        <Button
            android:id="@+id/btnEnviarRespuestas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar respuestas"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:background="#2E7D32" />
    </LinearLayout>
</ScrollView>


